{{#each fiches}}
<li class="card mb-3" style="width: 70vw; min-height: 250px;">
	<div class="col-md-3 thumbFiche">
		<h2>{{ this.level }}</h2>
	</div>
	<div class="col-md-8">
		<div class="card-body">
			<h5 class="card-title">{{ this.title }}</h5>
			<p class="card-text">{{ this.description }}</p>
			{{!-- <p class="card-text"><small class="text-muted">{{ this.submittedAt }}</small></p> --}}
			<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ficheModal-{{this._id}}">
				Voir la fiche
			</button>
			<p>
			{{#if this.userLikes includeZero=false}}
				<i class="fas fa-heart"></i>
			{{else}}
				<i class="far fa-heart"></i>
			{{/if}}
			{{ this.likesLength }}</p>
		</div>
	</div>
</li>


<!-- Modal -->
<div class="modal fade" id="ficheModal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="fichaModalLabel-{{this._id}}"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="ficheModalLabel-{{ this._id}}">{{ this.title }}</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				{{#if ../userId includeZero=true}}
					<img src="{{ this.img }}" class="card-img" alt="{{ this.title }}">
					<br>
					{{ this.content }}
				{{ else }}
					<p>Vous devez être connecté pour voir les fiches !</p>
				{{/if}}
			</div>
			<div class="modal-footer">
				{{ this.likesLength }}
				<i class="fas fa-heart"></i>

				{{#if this.userLikes includeZero=false}}
					<button type="button" class="btn btn-secondary like" fiche="{{this._id}}"><i class="far fa-heart"></i> Je n'aime plus cette
					fiche</button>
				{{else}}
					<button type="button" class="btn btn-secondary like" fiche="{{this._id}}"><i class="fas fa-heart"></i> J'aime cette fiche</button>
				{{/if}}
				<button type="button" class="btn btn-secondary closeModal" data-dismiss="modal">Fermer la
					fenêtre</button>
			</div>
		</div>
	</div>
</div>
{{/each}}