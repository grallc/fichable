<section id='signup'>
    <div class='cross'>
        <h5><i class="fas fa-times"></i></h5>
    </div>
    <div class='state'>
        <a href='#'>
            <h3 class='activeLink link' id='inboxRegister'>S'inscrire</h3>
        </a>
        <a href='#'>
            <h3 class='inactiveLink link' id='inboxLogin'>Se connecter</h3>
        </a>
    </div>
    <div class='form' id='registerForm'>
        <form method="POST" action="/api/users/register">
            <div class='formItem'>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="email@domaine.com">
            </div>
            <div class="formItem">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" placeholder="8 caractères min.">
            </div>
            <div class="formItem">
                <label for="confirmPassword">Confirmer le mot de passe</label>
                <input type="password" name="confirmPassword" id="confirmPassword">
                <span id='isValid'></span>
            </div>
            <div class="g-recaptcha" data-sitekey="6Ldj0KMUAAAAAAsxuWCndk2tO802cAYFwoFoD_zj"></div>
            <input type="submit" value="S'inscrire !">
        </form>
    </div>

    <div class='form' id='loginForm'>
        <p id="loginInfo"></p>
        <form>
            <div class='formItem'>
                <label for="email">Email</label>
                <input type="email" name="username" id="loginEmail" placeholder="email@domaine.com">
            </div>
            <div class="formItem">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="loginPassword" placeholder="Votre mot de passe">
            </div>
            <div class='formItem remember'>
                <label for="remember" class='stayConnect'>Rester connecté</label>
                <input type="checkbox" id="rememberUser" name="remember">
            </div>
            <p><em><a href='#'>Mot de passe oublié ?</a></em></p>
            <input id="signInButton" type="submit" value="Se connecter !">
        </form>
    </div>
</section>