{{> head }}

<body>
    <div id="wrapper">
        <header>
            <div class="burger" id='burger'>
                <div class='wrapbar'>
                    <div class="bar" id='bar1'></div>
                    <div class="bar" id='bar2'></div>
                    <div class="bar" id='bar3'></div>
                </div>
            </div>
            <div class="title">
                <a href='#'>
                    <p><strong>ÌFICHABLEÍ</strong></p>
                </a>
            </div>
            <div class="connect">
                <div class="dropdown">
                    <i class="fas fa-user-circle button"></i>
                    <div>
                        <a href="#" id='register'>S'inscrire</a>
                        <a href="#" id='login'>Se connecter</a>
                    </div>
                </div>
            </div>
        </header>
        <div id="navbar">
            <nav>
                <ul>
                    <a href="#">
                        <li>créer une fiche</li>
                    </a>
                    <a href="#">
                        <li>mes fiches</li>
                    </a>
                    <a href="#">
                        <li>catégories</li>
                    </a>
                    <a href="#">
                        <li><u>PREMIUM</u></li>
                    </a>
                    <a href="#">
                        <li>support</li>
                    </a>
                </ul>
            </nav>
        </div>
        <div class="container" id="grid">
            {{> fiches }}
        </div>
        <section id='signup'>
            <div class='state'>
                <a href='#'>
                    <h3 class='activeLink link' id='inboxRegister'>S'inscrire</h3>
                </a>
                <a href='#'>
                    <h3 class='inactiveLink link' id='inboxLogin'>Se connecter</h3>
                </a>
            </div>
            <div class='form' id='registerForm'>
                <form method="POST" action="/api/users/register">
                    <div class='formItem'>
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" placeholder="email@domaine.com">
                    </div>
                    <div class="formItem">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="password" id="password" placeholder="8 caractères min.">
                    </div>
                    <div class="formItem">
                        <label for="confirmPassword">Confirmer le mot de passe</label>
                        <input type="password" name="confirmPassword" id="confirmPassword">
                        <span id='isValid'></span>
                    </div>
                    <input type="submit" value="S'inscrire !">
                </form>
            </div>
            <div class='form' id='loginForm'>
                <p id="loginInfo"></p>
                <form>
                    <div class='formItem'>
                        <label for="email">Email</label>
                        <input type="email" name="username" id="loginEmail" placeholder="email@domaine.com">
                    </div>
                    <div class="formItem">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="password" id="loginPassword" placeholder="Votre mot de passe">
                    </div>
                    <p><em><a href='#'>Mot de passe oublié ?</a></em></p>
                    <input id="signInButton" type="submit" value="Se connecter !">
                </form>
            </div>
        </section>
</body>

</html>