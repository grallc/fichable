{{> head }}

<body>
    {{> header}}
    {{> navbar}}
    {{> login}}

    <div class="alert alert-primary" role="alert" id="ficheInfo" style="display: none">
    </div>

    <div class="alert alert-danger" role="alert" id="ficheError" style="display: none">
    </div>
    <div class='container'>
        <h1>Créer une fiche</h1>
        <div class='form'>
            <form id="ficheForm"> 
                <div class='row'>
                    <label for="ficheTitle">Titre de la fiche</label>
                    <input type="text" name="title" id="ficheTitle">
                </div>
                <div class="row">
                    <label for="level">Niveau scolaire</label>
                    <select name="level" id="level">
                        <option value="Collège" disabled>Collège</option>
                        <option value="Sixième">Sixème</option>
                        <option value="Cinquième">Cinquième</option>
                        <option value="Quatrième">Quatrième</option>
                        <option value="Troisième">Troisième</option>
                        <option value="Lycée" disabled>Lycée</option>
                        <option value="Seconde">Seconde</option>
                        <option value="Première" disabled>Première</option>
                        <option value="Première L">Première L</option>
                        <option value="Première S">Première S</option>
                        <option value="Première ES">Première ES</option>
                        <option value="Première STI2D">Première STI2D</option>
                        <option value="Terminale" disabled>Terminale</option>
                        <option value="Terminale L">Terminale L</option>
                        <option value="Terminale S">Terminale S</option>
                        <option value="Terminale ES">Terminale ES</option>
                        <option value="Terminale STI2D">Terminale STI2D</option>
                    </select>
                </div>
                <div class="row">
                    <label for="subject">Matière</label>
                    <select name="subject" id="subject">
                        <option value="Langues" disabled>Langues Vivantes</option>
                        <option value="Anglais">Anglais</option>
                        <option value="Espagnol">Espagnol</option>
                        <option value="Italien">Italien</option>
                        <option value="Allemand">Allemand</option>
                        <option value="Littéraire" disabled>Littéraire</option>
                        <option value="Français">Français</option>
                        <option value="Philosophie">Philosophie</option>
                        <option value="Histoire-Géographie">Histoire-Géographie-EMC</option>
                        <option value="Scientifique" disabled>Scientifique</option>
                        <option value="Mathématiques">Mathématiques</option>
                        <option value="Physique-Chimie">Physique-Chimie</option>
                        <option value="SVT">SVT</option>
                        <option value="SI">Sciences de l'Ingénieur</option>
                        <option value="Artistique" disabled>Artistique</option>
                        <option value="Arts Plastiques">Arts Plastiques</option>
                        <option value="Arts Appliqués">Arts Appliqués</option>
                        <option value="Musique">Musique</option>
                        <option value="Spécialités" disabled>Spécialités</option>
                        <option value="ISN">ISN</option>
                        <option value="Spé Maths">Spé Maths</option>
                        <option value="Spé Physque">Spé Physique</option>
                    </select>
                </div>
                <div class="row">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" placeholder="Verbes Irréguliers..." required
                        spellcheck="true" minlength="5" maxlength="250" cols="30" rows="10"></textarea>
                </div>
                <div class="row">
                    <label for="description">Contenu (textuel)</label>
                    <textarea name="content" id="content" placeholder="Écrivez le contenu de la fiche"
                        spellcheck="true" minlength="30" maxlength="2500" cols="30" rows="10"></textarea>
                </div>
                <script>
                    var easyMDE = new EasyMDE({element: $('#content')[0]});
                </script>
                <!--////////////////////////////////////////////
                    PAUL'S CODE
                ////////////////////////////////////////////////-->

                <div class="img-container">
                    <img id="image" src="../../new/picture.jpeg" alt="Picture">
                </div>

                <!-- Toolbar -->
                <div class="docs-buttons">
                    <!-- Mode de la souris -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary" data-method="setDragMode" data-option="move"
                            title="Bouger">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Mode: Bouger">
                                <span class="fas fa-arrows-alt"></span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-primary" data-method="setDragMode" data-option="crop"
                            title="Mode: Rogner">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Mode: Rogner">
                                <span class="fa fa-crop"></span>
                            </span>
                        </button>
                    </div>
                    <!-- Zoom -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary" data-method="zoom" data-option="0.1"
                            title="Zoom +">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Zoom +">
                                <span class="fa fa-search-plus"></span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-primary" data-method="zoom" data-option="-0.1"
                            title="Zoom -">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Zoom -">
                                <span class="fa fa-search-minus"></span>
                            </span>
                        </button>
                    </div>
                    <!-- Bouger -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary" data-method="move" data-option="-10"
                            data-second-option="0" title="Gauche">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Gauche">
                                <span class="fa fa-arrow-left"></span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-primary" data-method="move" data-option="10"
                            data-second-option="0" title="Droite">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Droite">
                                <span class="fa fa-arrow-right"></span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-primary" data-method="move" data-option="0"
                            data-second-option="-10" title="Monter">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Monter">
                                <span class="fa fa-arrow-up"></span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-primary" data-method="move" data-option="0"
                            data-second-option="10" title="Descendre">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Descendre">
                                <span class="fa fa-arrow-down"></span>
                            </span>
                        </button>
                    </div>
                    <!-- Tourner -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary" data-method="rotate" data-option="-45"
                            title="Rotate Left">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Tourne vers la gauche de 45°">
                                <span class="fas fa-undo"></span>
                            </span>
                        </button>
                        <button type="button" class="btn btn-primary" data-method="rotate" data-option="45"
                            title="Rotate Right">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Tourne vers la droite de 45°">
                                <span class="fas fa-redo"></span>
                            </span>
                        </button>
                    </div>
                    <!-- Reset&Import -->
                    <div class="btn-group">
                        <!-- Reset -->
                        <button type="button" class="btn btn-primary" data-method="reset" title="Reset">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Reset">
                                <!-- changer le logo -->
                                <span class="fas fa-sync"></span>
                            </span>
                            <!-- Import -->
                        </button>
                        <label class="btn btn-primary btn-upload" for="inputImage" title="Changer l'image">
                            <input type="file" class="sr-only" id="inputImage" name="file" accept=".jpg,.jpeg,.png">
                            <span class="docs-tooltip" data-toggle="tooltip" title="Changer l'image">
                                <!-- changer le logo -->
                                <span class="fa fa-upload"></span>
                            </span>
                        </label>
                    </div>

                    <div class="docs-toggles">
                        <!-- <h3>Toggles:</h3> -->
                        <div class="btn-group" data-toggle="buttons">
                            <label class="btn btn-primary active">
                                <input type="radio" class="sr-only" id="aspectRatio0" name="aspectRatio"
                                    value="1.7777777777777777">
                                <span class="docs-tooltip" data-toggle="tooltip" title="aspectRatio: 16 / 9">
                                    16:9
                                </span>
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" class="sr-only" id="aspectRatio1" name="aspectRatio"
                                    value="1.3333333333333333">
                                <span class="docs-tooltip" data-toggle="tooltip" title="aspectRatio: 4 / 3">
                                    4:3
                                </span>
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" class="sr-only" id="aspectRatio2" name="aspectRatio" value="1">
                                <span class="docs-tooltip" data-toggle="tooltip" title="aspectRatio: 1 / 1">
                                    1:1
                                </span>
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" class="sr-only" id="aspectRatio3" name="aspectRatio"
                                    value="0.6666666666666666">
                                <span class="docs-tooltip" data-toggle="tooltip" title="aspectRatio: 2 / 3">
                                    2:3
                                </span>
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" class="sr-only" id="aspectRatio4" name="aspectRatio" value="NaN">
                                <span class="docs-tooltip" data-toggle="tooltip" title="aspectRatio: NaN">
                                    Free
                                </span>
                            </label>
                        </div>
                    </div><!-- /.docs-toggles -->
                </div><!-- /.docs-buttons -->

                <!--////////////////////////////////////////////
                    PAUL'S CODE
                ////////////////////////////////////////////////-->
                <div class="g-recaptcha" data-sitekey="{{ getFicheCaptchaKey }}"></div>
                <input type="submit" id="submitFiche" value="Soumettre une fiche">
            </form>
        </div>
    </div>
    </form>
    </div>
    {{> footer}}


</body>

</html>